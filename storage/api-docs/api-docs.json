                                                "process_flow_id": {
                                                    "description": "Process flow ID",
                                                    "type": "integer"
                                                },
                                                "next_user_location": {
                                                    "description": "Next user location",
                                                    "type": "integer"
                                                },
                                                "step_type": {
                                                    "description": "Step type",
                                                    "type": "string"
                                                },
                                                "user_type": {
                                                    "description": "User type",
                                                    "type": "string"
                                                },
                                                "status": {
                                                    "description": "Status",
                                                    "type": "integer"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
